/**index.wxss**/

.swper-container {
  height: 200px;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.article-title-container {
  display: flex;
  align-items: center;
  padding-top: 8px;
  padding-bottom: 8px;
  padding-left: 12px;
  padding-right: 12px;
}

.article-icon {
  height: 22px;
  width: 22px;
}

.article-title {
  margin-left: 6px;
  margin-right: 2px;
  font-size: 16px;
  color: #48586d;
  font-weight: bold;
}

.article-more {
  height: 14px;
  width: 14px;
}

.article-container {
  padding: 8px;
  border-radius: 4px;
  overflow: hidden;
  border: 0.1px;
  box-shadow: 0px 0px 1px #929292;
  height: 310rpx;
  margin-left: 10px;
  margin-right: 10px;
  margin-top: 6px;
  margin-bottom: 6px;
}

.gridview {
  margin: 5rpx 5rpx 5rpx 5rpx;
}

.gridview-item {
  margin: 1%;
  width: 23%;
  height: 140rpx;
  float: left;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.gridview-item-img {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
}

.gridview-item-text {
  font-size: 12px;
  color: #929292;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: keep-all;
  display: inline-block;
  white-space: nowrap;
  width: 100%;
  text-align: center;
  margin-top: 8px;
}

.hot-container {
}

.hot-item-container {
  flex-direction: column;
  display: flex;
  padding: 10px;
}

.hot-item-title-container {
  align-items: center;
  display: flex;
}

.hot-item-title-right-container {
  width: 100%;
  display: flex;
  align-items: center;
}

.hot-item-author-pic {
  border-radius: 50%;
  height: 20px;
  width: 20px;
  border: 2px solid;
  border-color: #f2f2f2;
}

.hot-item-author-name {
  font-size: 14px;
  margin-left: 6px;
  font-weight: bold;
  color: #000;
}

.hot-item-chapter-name {
  font-size: 12px;
  margin-top: 2px;
  margin-left: 6px;
  width: 100%;
  text-align: right;
  color: #929292;
}

.hot-item-title {
  font-size: 16px;
  color: #000;
  margin-top: 8px;
  font-weight: bold;
}

.hot-item-like-container {
  align-items: center;
  margin-top: 6px;
  margin-bottom: 12px;
}

.hot-item-like {
  margin-left: 4px;
  margin-top: 10px;
  height: 10px;
  width: 10px;
}

.hot-item-like-num {
  margin-left: 3px;
  font-size: 11px;
  color: #929292;
}

.wx-author-container {
  margin-left: 14px;
  margin-right: 14px;
  display: flex;
  align-items: stretch;
}

.wx-author-item {
  display: flex;
  margin-top: 6px;
  margin-bottom: 6px;
  float: left;
  margin-left: 6px;
  padding-top: 6px;
  padding-bottom: 6px;
  margin-right: 6px;
  padding-left: 10px;
  padding-right: 10px;
  align-items: center;
  flex-direction: column;
  font-size: 12px;
  color: #18c8a1;
  border-radius: 20px;
  border: 1px;
  box-shadow: 0px 0px 1px #18c8a1;
}
